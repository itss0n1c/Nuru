{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist/",
		"resolveJsonModule": true,
		"rootDir": "src/",
		"target": "ES2022",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/*"]
}
