{
	"compilerOptions": {
			"declaration": true,
			"forceConsistentCasingInFileNames": true,
			"lib": ["ES2020"],
			"module": "CommonJS",
			"moduleResolution": "Node",
			"outDir": "build/",
			"resolveJsonModule": true,
			"rootDir": "src/",
			"target": "ESNext",
			"downlevelIteration": true,
			"esModuleInterop": true
	},
	"include": ["src/*"]
}
